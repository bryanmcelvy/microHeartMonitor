digraph {
    labelloc="t";
    label="Call Graph – μHeartMonitor";
    newrank=true;
    ranksep=1.2;

    main;

    subgraph cluster_app {
        style="dashed";
        label="App.";
        labeljust="l";

        LCD;
        QRS;
        DAQ[label="DAQ/Lookup"];
    };

    subgraph cluster_ext {
        style="dashed";
        label="External";
        labeljust="l";

        CMSIS[label="CMSIS-DSP"];
    };

    subgraph cluster_middle {
        style="dashed";
        label="Middleware";
        labeljust="c";

        ILI9341;
        Debug;
    };

    

    subgraph cluster_common {
        style="dashed";
        label="Common";
        labeljust="c";

        FIFO;
        NewAssert;
    };

    subgraph cluster_driver {
        style="dashed";
        label="Drivers";
        labeljust="c";

        ISR;
        SPI;
        Timer;
        ADC;
        UART;
        PLL;

        subgraph cluster_gpio {
            style="dashed";
            label="GPIO";
            labeljust="l";

            PA01[label="PA0/1", shape=rect];
            PE5[shape=rect];
            PA27[label="PA2-7", shape=rect];
        };
    };

    main -> {LCD, QRS, DAQ, Debug, ISR, PLL};
    DAQ -> {ADC, Timer};
    LCD -> ILI9341 -> SPI;

    ILI9341 -> Timer;

    {DAQ, QRS} -> CMSIS;
    Debug -> UART;

    Timer -> ADC -> PE5;
    SPI -> PA27;
    UART -> PA01;

    {rank=source; main};
    {rank=same; LCD, QRS, DAQ};
    {rank=same; ILI9341, Debug};
    {rank=same; ISR, SPI, Timer, ADC, UART, PLL};
    {rank=same; PE5, PA27, PA01};
}